<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Product">

	<!-- 상품등록 -->
	<insert id="insert" parameterType="Product">
		insert into product(product_id, subcategory_id, product_name,price
		,detail,filename)
		values(seq_product.nextval,
		#{subCategory.subcategory_id},#{product_name},#{price},#{detail},#{filename})
		<selectKey order="AFTER" keyProperty="product_id"
			resultType="int">
			select seq_product.currval as product_id from dual
		</selectKey>
	</insert>

	<!-- 상품 목록 보여주기 -->
	<resultMap id="productSubCategoryMap" type="Product">
		<id column="product_id" property="product_id" />
		<result column="product_name" property="product_name" />
		<result column="price" property="price" />
		<result column="detail" property="detail" />
		<result column="filename" property="filename" />

		<association column="subcategory_id"
			property="subCategory" javaType="SubCategory"
			select="SubCategory.select" />

	</resultMap>

	<select id="selectAll" resultMap="productSubCategoryMap">
		select * from product order by product_id desc
	</select>

	<!-- 관리자모드 상세보기 -->
	<select id="select" resultType="Product" parameterType="int">
		select * from product where product_id =#{product_id}
	</select>


</mapper>