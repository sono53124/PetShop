<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Product">

	<!-- 상품 목록 보여주기 -->
	<resultMap id="productSubCategoryMap" type="Product">
		<id column="product_id" property="product_id" />
		<result column="product_name" property="product_name" />
		<result column="price" property="price" />
		<result column="detail" property="detail" />
		<result column="filename" property="filename" />
	</resultMap>
	<select id="selectAll" resultMap="productSubCategoryMap">
		select * from product order by product_id desc
	</select>
	
	<!-- 상품등록 -->
	<insert id="insert" parameterType="Product">
		insert into product(product_id, subcategory_id, product_name,price
		,detail,filename)
		values(seq_product.nextval,
		#{subCategory.subcategory_id},#{product_name},#{price},#{detail},#{filename})
		<selectKey order="AFTER" keyProperty="product_id"
			resultType="int">
			select seq_product.currval as product_id from dual
		</selectKey>
	</insert>

	<!-- 상세보기 -->
	<resultMap  id="joinPsizeColorScoreImage" 	type="Product">
		<id column="product_id" 							property="product_id"/>
		<result column="product_name" 				property="product_name"/>
		<result column="price" 							property="price"/>
		<result column="detail" 							property="detail"/>
		<result column="filename" 						property="filename"/>
		
		<!-- <association 
			column="product_id" 
			property="score"
			javaType="Score"
			select="Score.selectByProductId"
			/> -->
		
		<!-- 사이즈 -->
		<collection 
			column="product_id" 
			property="psize"
			javaType="java.util.List"
			ofType="Psize"
			select="Psize.selectByProductId"
			/>
		
		<!-- 색상 -->
		<collection 
			column="product_id" 
			property="colorList"
			javaType="java.util.List"
			ofType="Color"
			select="Color.selectByProductId"
			/>
		
		<!-- 이미지 -->
		<collection 
			column="product_id" 
			property="imageList"
			javaType="java.util.List"
			ofType="Image"
			select="Image.selectByProductId"
			/>
		
	</resultMap>	
	
	<select id="select" resultMap="joinPsizeColorScoreImage">
		select * from product where product_id =#{product_id}
	</select>


</mapper>
























